.addbox{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:center;

}
.addboxitem{
  display: block;
  font-size:18px;
  width:100%;
  height:60px;
  background:white;
  color:#1473d2;
  margin-top:4%;
  width:80%;
  box-shadow:#00000010 0px 3px 30px;
  text-align:center;
  line-height:60px;
}
.formbox{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:center;

}
.formboxitem{
  display: block;
  width:100%;
  height:90px;
  background:white;
  color:#1473d2;
  margin-top:4%;
  width:94%;
  box-shadow:#00000010 0px 3px 30px;
  border-radius: 6px;
}




/* 编辑栏 */
