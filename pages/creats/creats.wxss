  height:60px;
  background:white;
  color:#1b1c1d;
  box-shadow:#00000010 0px 3px 30px;
  
}
.formname{
  text-align: 30px;
  font-size: 17px;
  padding-top: 10px;
  margin-left: 6%;
}
.formsubmit{
  text-align: 15px;
  font-size: 10px;
  margin-right: 6px;
  margin-top: 1%;
  color: rgb(114, 112, 112);
