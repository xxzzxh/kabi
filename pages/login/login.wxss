/**index.wxss**/
.container{
  height: 100%;
  background-color: #eaf3fb;
}
.userinfo {
  padding-top: 40%;
  display: flex;
  flex-direction: column;
  align-items: center;
 
}
.userinfo-nickname{
  font-size: 20px;
  color:#0d98eb;
  margin-bottom: 15%;
}
.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.btn {
  width:50%;
  height:50px;
  background-color: #58a6f6;
  border-radius: 40px;
  line-height:50px;
  color:white;
  margin:24rpx auto;
  font-size:40rpx;
}
.btnlong{
  width:80%;
  height:40px;
  background-color: #58a6f6;
  border-radius: 40px;
  line-height:40px;
  color:white;
  margin:24rpx auto;
  font-size:32rpx;
}
